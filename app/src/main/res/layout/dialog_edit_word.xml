<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etEditRussianWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/russian_word"
            android:inputType="text" />

        <EditText
            android:id="@+id/etEditGermanWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/german_word"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerEditCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnEditSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_image"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/ivEditWordImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView> 